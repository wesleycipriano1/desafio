
<%- include('layout', { body: content }) %>
<h2>Lista de Produtos</h2>
<table>
    <thead>
        <tr class="cabecalho-tabela">
            <th>ID</th>
            <th>Nome</th>
            <th>Código</th>
            <th>Descrição</th>
            <th>Preço</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        <% produtos.forEach(produto => { %>
            <tr>
                <td><%= produto.id %></td>
                <td><%= produto.nome %></td>
                <td><%= produto.codigo %></td>
                <td><%= produto.descricao %></td>
                <td>R$ <%= produto.preco.toFixed(2) %></td>
                <td>
                    <a href="/edit/<%= produto.id %>" class="btn-edit">Editar</a>
                    <a href="#" onclick="confirmarExclusao('/delete/<%= produto.id %>')" class="btn-delete">Deletar</a>
                </td>
            </tr>
        <% }); %>
    </tbody>
</table>
<a href="/add" class="btn-add">Adicionar Produto</a>
